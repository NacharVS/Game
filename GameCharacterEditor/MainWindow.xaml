            <StackPanel Orientation="Horizontal">
                <Image Source="plus.png" Height="25" Width="27" />
            </StackPanel>
        </Button>
        <Button Style="{DynamicResource ButtonStyle2}" HorizontalAlignment="Left" Height="34" Margin="163,139,0,0" VerticalAlignment="Top" Width="40" Background="#FFDDDDDD" FontFamily="Comic Sans MS" FontSize="28">
            <Button.Effect>
                <DropShadowEffect BlurRadius="5" ShadowDepth="1"/>
