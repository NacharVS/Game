<Window x:Class="GameCharacterEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameCharacterEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cmbbox" HorizontalAlignment="Left" Margin="32,27,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Warrior"/>
            <ComboBoxItem Content="Rogue"/>
            <ComboBoxItem Content="Sorcerer"/>
        </ComboBox>
        <TextBox x:Name="txtStrength" HorizontalAlignment="Left" Margin="33,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" InputScope="Number"/>
        <TextBox x:Name="txtIntelegence" HorizontalAlignment="Left" Margin="35,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="117" Height="22"/>
        <TextBox x:Name="txtConstitution" HorizontalAlignment="Left" Margin="202,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtExtra" IsReadOnly="True" HorizontalAlignment="Left" Margin="37,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="115" Height="20" IsReadOnlyCaretVisible="True"/>
        <TextBox x:Name="txtWalkingSpeed" IsReadOnly="True"  HorizontalAlignment="Left" Margin="38,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnlyCaretVisible="True"/>
        <TextBox x:Name="txtAttackSpeed" IsReadOnly="True"  HorizontalAlignment="Left" Margin="202,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnlyCaretVisible="True"/>
        <Button Content="P.Attack" HorizontalAlignment="Left" Margin="33,298,0,0" VerticalAlignment="Top" Height="29" Width="89" Click="Button_Click"/>
        <Button Content="M.Attack" HorizontalAlignment="Left" Margin="185,298,0,0" VerticalAlignment="Top" Height="29" Width="89" Click="Button_Click_2"/>
        <Button Content="P.Defence" HorizontalAlignment="Left" Margin="33,354,0,0" VerticalAlignment="Top" Height="29" Width="89" Click="Button_Click_1"/>
        <Button Content="M.Defence" HorizontalAlignment="Left" Margin="185,354,0,0" VerticalAlignment="Top" Height="29" Width="89"/>
        <Label Content="Strength&#xD;&#xA;" HorizontalAlignment="Left" Margin="34,60,0,0" VerticalAlignment="Top" Width="118" Height="27"/>
        <Label Content="Dexterity&#xD;&#xA;" HorizontalAlignment="Left" Margin="196,61,0,0" VerticalAlignment="Top" Width="89"/>
        <Label Content="intelegence&#xD;&#xA;" HorizontalAlignment="Left" Margin="34,104,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.763,0.695" Width="119" Height="25"/>
        <Label Content=" Constitution" HorizontalAlignment="Left" Margin="198,106,0,0" VerticalAlignment="Top" Width="125"/>
        <Label Content="Extra" HorizontalAlignment="Left" Margin="34,163,0,0" VerticalAlignment="Top" Width="116"/>
        <Label Content="AttackSpeed" HorizontalAlignment="Left" Margin="196,170,0,0" VerticalAlignment="Top" Width="127"/>
        <Label Content="WalkingSpeed" HorizontalAlignment="Left" Margin="36,222,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtDexterity" HorizontalAlignment="Left" Height="20" Margin="201,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="111"/>
        <Button Content="Coздать" HorizontalAlignment="Left" Margin="313,300,0,0" VerticalAlignment="Top" Height="68" Width="168" Click="Button_Click_3"/>
        <Image HorizontalAlignment="Left" Height="226" Margin="606,44,0,0" VerticalAlignment="Top" Width="175"/>
        <TextBox x:Name="txthp" IsReadOnly="True"  HorizontalAlignment="Left" Margin="202,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnlyCaretVisible="True"/>
        <Label Content="HP" HorizontalAlignment="Left" Margin="201,218,0,0" VerticalAlignment="Top" Height="27" Width="121"/>
        <Button Content="Inventar" HorizontalAlignment="Left" Margin="594,334,0,0" VerticalAlignment="Top" Height="34" Width="157" Click="Button_Click_4">

        </Button>

        <ComboBox x:Name="cmbBoxInventar" HorizontalAlignment="Left" Margin="331,48,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="All things&#xD;&#xA;" HorizontalAlignment="Left" Margin="329,17,0,0" VerticalAlignment="Top" Width="128" Height="29"/>
        <Button HorizontalAlignment="Left" Margin="332,94,0,0" VerticalAlignment="Top" Height="37" Width="123" Click="Button_Click_5">
            <TextBlock Text="Добавить в свой инвентарь" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
        <ComboBox x:Name="cmbBoxItem" HorizontalAlignment="Left" Margin="470,48,0,0" VerticalAlignment="Top" Width="120"/>
        <Button HorizontalAlignment="Left" Margin="471,94,0,0" VerticalAlignment="Top" Height="37" Width="123" Click="Button_Click_6">
            <TextBlock Text="Удалить из инвентаря" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
        <Label Content="Your Inventar" HorizontalAlignment="Left" Margin="470,17,0,0" VerticalAlignment="Top" Width="128" Height="29"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="643,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Prev" Content="&lt;" HorizontalAlignment="Left" Margin="594,295,0,0" VerticalAlignment="Top" Height="35" Width="35" FontSize="20" FontWeight="Bold" Click="Prev_Click"/>
        <Button x:Name="Next" Content="&gt;" HorizontalAlignment="Left" Margin="716,295,0,0" VerticalAlignment="Top" Height="35" Width="35" FontWeight="Bold" FontSize="20" Click="Next_Click"/>
    </Grid>
</Window>
