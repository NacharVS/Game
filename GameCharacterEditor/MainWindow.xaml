<Window x:Class="GameCharacterEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameCharacterEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="395*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Create person" Margin="2,0,545,337" FontSize="36" Grid.ColumnSpan="2"/>
        <TextBox Name="tb" Grid.Column="1" Margin="545,59,78,337" TextChanged="tb_TextChanged"/>
        <ListBox Name="lb" SelectionChanged="PrintText" SelectionMode="Single" Margin="258,8,258,337" FontSize="14" Grid.Column="1">
            <ListBoxItem Selected="ListBoxItem_Selected">Warrior</ListBoxItem>
            <ListBoxItem Selected="ListBoxItem_Selected_1">Sorcerer</ListBoxItem>
            <ListBoxItem Selected="ListBoxItem_Selected_2">Archer</ListBoxItem>
        </ListBox>
        <TextBox x:Name="cons" Grid.Column="1" Margin="177,111,562,275" Text="20"/>
        <TextBox x:Name="inte" Grid.Column="1" Margin="177,176,562,210" Text="20"/>
        <TextBox x:Name="dext" Grid.Column="1" Margin="95,176,640,210" Text="20"/>
        <TextBox x:Name="stre" Grid.Column="1" Margin="95,112,640,275" Text="20"/>
        <Label Content="Strenght" HorizontalAlignment="Left" Margin="15,115,0,0" VerticalAlignment="Top" Width="75" FontSize="14" Grid.Column="1"/>
        <Label Content="Dexterity" Grid.Column="1" HorizontalAlignment="Left" Margin="21,172,0,0" VerticalAlignment="Top" Width="75" FontSize="14"/>
        <Label Content="Intelegense" Grid.Column="1" HorizontalAlignment="Left" Margin="258,176,0,0" VerticalAlignment="Top" Width="100" FontSize="14"/>
        <Label Content="Constitution" Grid.Column="1" HorizontalAlignment="Left" Margin="258,112,0,0" VerticalAlignment="Top" Width="100" FontSize="14"/>
        <Button x:Name="btnSave" Content="Save person" Grid.Column="1" Margin="8,345,596,22" FontSize="20" Click="btnSave_Click"/>
        <Button Content="Choose objects" Grid.Column="1" HorizontalAlignment="Left" Margin="8,297,0,0" VerticalAlignment="Top" Height="43" Width="194" Click="Button_Click_1"/>
        <TextBox x:Name="dext_Copy" Grid.Column="1" Margin="640,126,95,260" Text="20"/>
    </Grid>
</Window>
