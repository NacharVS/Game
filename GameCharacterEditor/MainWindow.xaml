<Window x:Class="GameCharacterEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameCharacterEditor"
        mc:Ignorable="d"
        Title="RPGame" Height="700" Width="1100" Background="#FF891010">

    <Border Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7"/>
                <ColumnDefinition Width="11"/>
                <ColumnDefinition Width="32.054"/>
                <ColumnDefinition Width="230.831"/>
                <ColumnDefinition Width="67.115"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.ColumnSpan="5">
                <TextBlock Text="Choose your Character" HorizontalAlignment="Center" FontSize="20" Margin="0 10 0 15"/>
                <Grid x:Name="ChooseCharacter" Margin="0 0 0 15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <RadioButton x:Name="ChooseWarriorRB" Content="Warrior" Grid.Column="0" Width="100" Height="30" Click="ChooseWarrior_Click"/>
                    <RadioButton x:Name="ChooseRogueRB" Content="Rogue" Grid.Column="1" Width="100" Height="30" Click="ChooseWarrior_Click"/>
                    <RadioButton x:Name="ChooseSorcererRB" Content="Sorcerer" Grid.Column="2" Width="100" Height="30" Click="ChooseWarrior_Click"/>
                </Grid>
                <TextBlock Text="Stats" Margin="10 15 0 10" FontSize="18" HorizontalAlignment="Center"/>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Health point" Grid.Row="0" Grid.Column="1" Margin="5 0 0 0"/>
                    <TextBox x:Name="HP_TB" IsReadOnly="True" Grid.Row="1" Grid.Column="1" Background="Silver" Margin="5"/>
                    <TextBlock Text="Mana point" Grid.Row="0" Grid.Column="2" Margin="5 0 0 0"/>
                    <TextBox x:Name="MP_TB" IsReadOnly="True" Grid.Row="1" Grid.Column="2" Background="Silver" Margin="5"/>

                    <TextBlock Text="Strenght" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" Margin="5 0 0 0"/>
                    <TextBox x:Name="Strenght_TB" IsReadOnly ="True" Grid.Column="0" Background="Silver" Grid.Row="3" Margin="5"/>
                    <TextBlock Text="Dexterity" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Margin="5 0 0 0"/>
                    <TextBox x:Name="Dexterity_TB" IsReadOnly ="True" Grid.Column="1" Background="Silver" Grid.Row="3" Margin="5"/>
                    <TextBlock Text="Intelligence" Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" Margin="5 0 0 0"/>
                    <TextBox x:Name="Intelligenct_TB" IsReadOnly ="True" Grid.Column="2" Background="Silver" Grid.Row="3" Margin="5"/>
                    <TextBlock Text="Constitution" Grid.Column="3" Grid.Row="2" VerticalAlignment="Center" Margin="5 0 0 0"/>
                    <TextBox x:Name="Constitution_TB" IsReadOnly ="True" Grid.Column="3" Background="Silver" Grid.Row="3" Margin="5"/>

                </Grid>

                <Grid Margin="0 15 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Extras" Grid.Column="2" Grid.Row="0" Margin="5 10 10 10" HorizontalAlignment="Center" FontSize="15"/>
                    <TextBox x:Name="Extra_TB" IsReadOnly="True" Grid.Column="3" Grid.Row="0" Margin="5 10 5 10" Background="Silver"/>

                    <TextBlock Text="Phys Attack" Grid.Row="1" Grid.Column="1" Margin="5"/>
                    <Button x:Name="PA_down" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Width="15" Height="15" Margin="5" Click="ExtraDebuff_Click"/>
                    <TextBox x:Name="PA_TB" Grid.Row="2" Grid.Column="1" IsReadOnly="True" Background="Silver" Margin="5"/>
                    <Button x:Name="PA_up" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" Width="15" Height="15"  Margin="5" Click="ExtraBuff_Click"/>
                    <TextBlock Text="Magic Attack" Grid.Row="1" Grid.Column="4" Margin="5"/>
                    <Button x:Name="MA_down" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Right" Width="15" Height="15" Margin="5" Click="ExtraDebuff_Click"/>
                    <TextBox x:Name="MA_TB" Grid.Row="2" Grid.Column="4" IsReadOnly="True" Background="Silver" Margin="5"/>
                    <Button x:Name="MA_up" Grid.Row="2" Grid.Column="5" HorizontalAlignment="Left" Width="15" Height="15"  Margin="5" Click="ExtraBuff_Click"/>

                    <TextBlock Text="Phys Resist" Grid.Row="3" Grid.Column="1" Margin="5"/>
                    <Button x:Name="PR_down" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" Width="15" Height="15" Margin="5" Click="ExtraDebuff_Click"/>
                    <TextBox x:Name="PR_TB" Grid.Row="4" Grid.Column="1" IsReadOnly="True" Background="Silver" Margin="5"/>
                    <Button x:Name="PR_up" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Left" Width="15" Height="15"  Margin="5" Click="ExtraBuff_Click"/>
                    <TextBlock Text="Magic Resist" Grid.Row="3" Grid.Column="4" Margin="5"/>
                    <Button x:Name="MR_down" Grid.Row="4" Grid.Column="3" HorizontalAlignment="Right" Width="15" Height="15" Margin="5" Click="ExtraDebuff_Click"/>
                    <TextBox x:Name="MR_TB" Grid.Row="4" Grid.Column="4" IsReadOnly="True" Background="Silver" Margin="5"/>
                    <Button x:Name="MR_up" Grid.Row="4" Grid.Column="5" HorizontalAlignment="Left" Width="15" Height="15"  Margin="5" Click="ExtraBuff_Click"/>

                    <TextBlock Text="Attack speed" Grid.Row="5" Grid.Column="2" Margin="0 20 5 5"/>
                    <TextBox x:Name="AS_TB" IsReadOnly="True" Grid.Row="6" Grid.Column="2" Background="Silver" Margin="0 5 20  15"/>

                    <TextBlock Text="Movement speed" Grid.Row="5" Grid.Column="3" Margin="0 20 5 5"/>
                    <TextBox x:Name="MS_TB" IsReadOnly="True" Grid.Row="6" Grid.Column="3" Background="Silver" Margin="0 5 20  15"/>
                    <Button x:Name="PickButton" Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="2" Height="30" Width="80" Margin="10 50 10 10" Content="Pick!" Click="PickButton_Click"/>
                </Grid>
            </StackPanel>


            <Grid  Grid.Column="5" Width="700" Margin="16,10,16,10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <DataGrid Grid.Row="0" x:Name="CharacterList" AutoGenerateColumns="False" Background="Silver">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Path = ID}" IsReadOnly="False" Header="ID"/>
                        <DataGridTextColumn Binding="{Binding Path = Character}" IsReadOnly="False" Header="Character"/>
                        <DataGridTextColumn Binding="{Binding Path = HP}" IsReadOnly="True" Header="Health"/>
                        <DataGridTextColumn Binding="{Binding Path = MP}" IsReadOnly="True" Header="Mana"/>
                        <DataGridTextColumn Binding="{Binding Path = Strenght}" IsReadOnly="True" Header="Strenght"/>
                        <DataGridTextColumn Binding="{Binding Path = Dexterity}" IsReadOnly="True" Header="Dexterity"/>
                        <DataGridTextColumn Binding="{Binding Path = Intelligence}" IsReadOnly="True" Header="Intelligence"/>
                        <DataGridTextColumn Binding="{Binding Path = Constitution}" IsReadOnly="True" Header="Consitution"/>
                        <DataGridTextColumn Binding="{Binding Path = PAttack}" IsReadOnly="True" Header="P Attack"/>
                        <DataGridTextColumn Binding="{Binding Path = MAttack}" IsReadOnly="True" Header="M Attack"/>
                        <DataGridTextColumn Binding="{Binding Path = PResist}" IsReadOnly="True" Header="P Resist"/>
                        <DataGridTextColumn Binding="{Binding Path = MResist}" IsReadOnly="True" Header="M Resist"/>
                        <DataGridTextColumn Binding="{Binding Path = ASpeed}" IsReadOnly="True" Header="A Speed"/>
                        <DataGridTextColumn Binding="{Binding Path = MSpeed}" IsReadOnly="True" Header="M Speed"/>
                    </DataGrid.Columns>
                </DataGrid>


                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Shop" Margin="10" FontSize="25" HorizontalAlignment="Center"/>
                    <Grid Grid.Row="1">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="10">
                            <ComboBox x:Name="HelnetComboBox" >
                                
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="10">
                            <TextBlock Text="Armour" HorizontalAlignment="Center" FontSize="15"/>
                            <RadioButton Checked="RadioButton_Checked" GroupName="ArmourGroup" x:Name="LightArmourRB" Content="Light armour"/>
                            <RadioButton Checked="RadioButton_Checked" GroupName="ArmourGroup" x:Name="MediumArmourRB" Content="Medium armour"/>
                            <RadioButton Checked="RadioButton_Checked" GroupName="ArmourGroup" x:Name="HeavyArmourRB" Content="Heavy armour"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="10">
                            <TextBlock Text="Pants" HorizontalAlignment="Center" FontSize="15"/>
                            <RadioButton Checked="RadioButton_Checked" GroupName="PantsGroup" x:Name="LightPantsRB" Content="Light pants"/>
                            <RadioButton Checked="RadioButton_Checked" GroupName="PantsGroup" x:Name="MediumPantsRB" Content="Medium pants"/>
                            <RadioButton Checked="RadioButton_Checked" GroupName="PantsGroup" x:Name="HeavyPantsRB" Content="Heavy pants"/>
                        </StackPanel>
                        <StackPanel Grid.Column="3" Margin="10">
                            <TextBlock Text="Boots" HorizontalAlignment="Center" FontSize="15"/>
                            <RadioButton Checked="RadioButton_Checked" GroupName="BootsGroup" x:Name="LightBootsRB" Content="Light boots"/>
                            <RadioButton Checked="RadioButton_Checked" GroupName="BootsGroup" x:Name="MediumBootsRB" Content="Medium boots"/>
                            <RadioButton Checked="RadioButton_Checked" GroupName="BootsGroup" x:Name="HeavyBootsRB" Content="Heavy boots"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4" Margin="10">
                            <TextBlock Text="Weapons" HorizontalAlignment="Center" FontSize="15"/>
                            <RadioButton Checked="RadioButton_Checked" GroupName="WeaponGroup" x:Name="AxeRB" Content="Axe"/>
                            <RadioButton Checked="RadioButton_Checked" GroupName="WeaponGroup" x:Name="SaberRB" Content="Saber"/>
                            <RadioButton Checked="RadioButton_Checked" GroupName="WeaponGroup" x:Name="ScepterRB" Content="Scepter"/>
                        </StackPanel>
                    </Grid>
                    
                    <Grid Grid.Row="2" VerticalAlignment="Top" Background="Black">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" x:Name="AddedHelmetTB" Margin="10" Height="30"/>
                        <Image Grid.Column="1" x:Name="AddedArmourTB" Margin="10" Height="30"/>
                        <Image Grid.Column="2" x:Name="AddedPantsTB" Margin="10" Height="30"/>
                        <Image Grid.Column="3" x:Name="AddedBootsTB" Margin="10" Height="30"/>
                        <Image Grid.Column="4" x:Name="AddedWeaponTB" Margin="10" Height="30"/>
                        
                    </Grid>
                    
                </Grid>
            </Grid>
        </Grid>
    </Border>

</Window>
