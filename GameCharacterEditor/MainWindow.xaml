<Window x:Class="GameCharacterEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameCharacterEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.596,0.082">
        <Grid.Background>
            <ImageBrush ImageSource="/Задний фон.jpg"/>
        </Grid.Background>
        <Border BorderThickness="5" CornerRadius="0" BorderBrush="White" HorizontalAlignment="Left" Height="139" Margin="603,44,0,0" VerticalAlignment="Top" Width="140" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.328"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
            <Image HorizontalAlignment="Center" Height="140" VerticalAlignment="Center" Width="144" Source="/Русский_воин.jpeg" Stretch="Fill" StretchDirection="Both"/>
        </Border>
        <Label Content="Выберите своего героя!" HorizontalAlignment="Left" Margin="597,193,0,0" VerticalAlignment="Top" Width="152" Cursor="Arrow" Background="#FF5ADAD8" FontFamily="Arial Rounded MT Bold"/>
        <TextBox HorizontalAlignment="Left" Margin="428,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="28" IsEnabled="False"/>
        <Label Content="Сила" HorizontalAlignment="Left" Margin="428,21,0,0" VerticalAlignment="Top" FontFamily="Bookman Old Style" FontSize="14"/>
        <Label Content="Ловкость" HorizontalAlignment="Left" Margin="428,77,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.521,0.533" FontFamily="Bookman Old Style" FontSize="14"/>
        <Label Content="Интеллект" HorizontalAlignment="Left" Margin="428,131,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.495,2.174" FontFamily="Bookman Old Style" FontSize="14"/>
        <Label Content="Телосложение" HorizontalAlignment="Left" Margin="428,185,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.521,0.533" FontFamily="Bookman Old Style" FontSize="14"/>
        <TextBox HorizontalAlignment="Left" Margin="428,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="28" IsEnabled="False"/>
        <TextBox HorizontalAlignment="Left" Margin="428,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="28" IsEnabled="False"/>
        <TextBox HorizontalAlignment="Left" Margin="428,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="28" IsEnabled="False"/>
        <Button x:Name="bnt_clickm1" Content="-" HorizontalAlignment="Left" Margin="400,48,0,0" VerticalAlignment="Top" Width="21" Background="#FF20B4E2"/>
        <Button x:Name="bnt_clickp1" Content="+" HorizontalAlignment="Left" Margin="553,48,0,0" VerticalAlignment="Top" Width="21" Background="#FF2FD737"/>
        <Button x:Name="bnt_clickm2" Content="-" HorizontalAlignment="Left" Margin="400,102,0,0" VerticalAlignment="Top" Width="21" Background="#FF20B4E2"/>
        <Button x:Name="bnt_clickm3" Content="-" HorizontalAlignment="Left" Margin="400,156,0,0" VerticalAlignment="Top" Width="21" Background="#FF20B4E2"/>
        <Button x:Name="bnt_clickm4" Content="-" HorizontalAlignment="Left" Margin="400,210,0,0" VerticalAlignment="Top" Width="21" Background="#FF20B4E2"/>
        <Button x:Name="bnt_clickp2" Content="+" HorizontalAlignment="Left" Margin="553,102,0,0" VerticalAlignment="Top" Width="21" Background="#FF2FD737"/>
        <Button x:Name="bnt_clickp3" Content="+" HorizontalAlignment="Left" Margin="553,156,0,0" VerticalAlignment="Top" Width="21" Background="#FF2FD737"/>
        <Button x:Name="bnt_clickp4" Content="+" HorizontalAlignment="Left" Margin="553,210,0,0" VerticalAlignment="Top" Width="21" Background="#FF2FD737"/>


    </Grid>
</Window>
