        <TextBox x:Name="Ph_Deh" HorizontalAlignment="Left" Margin="511,591,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" Height="42" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="Mg_Attack" HorizontalAlignment="Left" Margin="835,497,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" Height="42" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Физическая атака" HorizontalAlignment="Left" Margin="513,465,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontSize="16"/>
        <Label Content="Физическая защита" HorizontalAlignment="Left" Margin="505,559,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Comic Sans MS"/>
        <Label Content="Скорость Атаки" HorizontalAlignment="Left" Margin="685,465,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Comic Sans MS"/>
        <Label Content="Скорость бега" HorizontalAlignment="Left" Margin="691,559,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontSize="16"/>
        <Label Content="Магическая атака" HorizontalAlignment="Left" Margin="835,465,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Comic Sans MS"/>
        <Label Content="Магическая защита" HorizontalAlignment="Left" Margin="835,554,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Comic Sans MS"/>
