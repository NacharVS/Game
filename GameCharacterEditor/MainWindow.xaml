        <Button x:Name="bnt_clickm3" Content="-" HorizontalAlignment="Left" Margin="22,182,0,0" VerticalAlignment="Top" Width="38" Background="#FF20B4E2" Cursor="Hand" Click="bnt_clickm3_Click" Height="36">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="bnt_clickm4" Content="-" HorizontalAlignment="Left" Margin="22,284,0,0" VerticalAlignment="Top" Width="38" Background="#FF20B4E2" Cursor="Hand" Click="bnt_clickm4_Click" Height="36">
