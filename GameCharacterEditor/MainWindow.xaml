            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.37"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.394"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label Content="Количество дополнительных очков" HorizontalAlignment="Left" Margin="977,314,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontSize="22" Height="44" Width="413" FontWeight="Bold"/>
        <TextBox x:Name="lvltxt" HorizontalAlignment="Left" Margin="1101,570,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" Height="100" Text="0" TextAlignment="Center" FontSize="36" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" />
        <Label Content="Уровень вашего персонажа" HorizontalAlignment="Left" Margin="1027,525,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontSize="22" Height="40" Width="318" FontWeight="Bold"/>
        <ComboBox x:Name="Hero" HorizontalAlignment="Left" Margin="291,280,0,0" VerticalAlignment="Top" Width="239" SelectionChanged="ComboBox_SelectionChanged" FontFamily="Comic Sans MS" FontSize="16" Background="{x:Null}" Height="45" BorderBrush="{x:Null}">
