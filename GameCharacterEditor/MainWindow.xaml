        <Image HorizontalAlignment="Left" Height="34" Margin="617,595,0,0" VerticalAlignment="Top" Width="34" Source="/Щит_Физика.png"/>
        <Image HorizontalAlignment="Left" Height="35" Margin="782,500,0,0" VerticalAlignment="Top" Width="36" Source="/Атак_Спид.jfif"/>
        <Image HorizontalAlignment="Left" Height="28" Margin="768,598,0,0" VerticalAlignment="Top" Width="50" Source="/Скорость_бега.jfif"/>
        <Image HorizontalAlignment="Left" Height="33" Margin="937,501,0,0" VerticalAlignment="Top" Width="39" Source="/Магическая_Атака.jfif"/>
        <Image HorizontalAlignment="Left" Height="35" Margin="942,595,0,0" VerticalAlignment="Top" Width="34" Source="/Магичекая_защита.jpg"/>
