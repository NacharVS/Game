                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="bnt_clickp2" Content="+" HorizontalAlignment="Left" Margin="208,119,0,0" VerticalAlignment="Top" Width="38" Background="#FF2FD737" Cursor="Hand" Click="bnt_clickp2_Click" Height="35">
