                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="bnt_clickp3" Content="+" HorizontalAlignment="Left" Margin="208,182,0,0" VerticalAlignment="Top" Width="38" Background="#FF2FD737" Cursor="Hand" Click="bnt_clickp3_Click" Height="36">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="bnt_clickp4" Content="+" HorizontalAlignment="Left" Margin="208,284,0,0" VerticalAlignment="Top" Width="38" Background="#FF2FD737" Cursor="Hand" Click="bnt_clickp4_Click" Height="36">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
