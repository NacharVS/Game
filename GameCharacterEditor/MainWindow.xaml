                <DropShadowEffect/>
            </ComboBox.Effect>
            <ComboBoxItem Content="Воин"/>
            <ComboBoxItem Content="Изгой"/>
            <ComboBoxItem Content="Магический_чувак"/>
            <ComboBoxItem Content="Лучник"/>
        </ComboBox>
        <TextBox x:Name="Manatxt" HorizontalAlignment="Left" Margin="60,381,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162" Height="129" IsEnabled="False" TextAlignment="Center" FontSize="24" FontFamily="Comic Sans MS" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextDecorations="{x:Null}"/>
        <TextBox x:Name="Healthtxt" HorizontalAlignment="Left" Margin="291,381,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Height="129" IsEnabled="False" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Comic Sans MS" FontSize="24"/>
