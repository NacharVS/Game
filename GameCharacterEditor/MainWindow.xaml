<Window x:Class="GameCharacterEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameCharacterEditor"
        FontFamily="Comic Sans MS"
        mc:Ignorable="d"
        Title="MainWindow" Height="570" Width="1089" ResizeMode="NoResize">
    <Grid RenderTransformOrigin="0.97,0.056" Margin="0,0,0,-6">
        <Grid.Background>
            <ImageBrush ImageSource="/Задний фон.jpg"/>
        </Grid.Background>
        <Border BorderThickness="5" CornerRadius="0" BorderBrush="white" HorizontalAlignment="Left" Height="215" Margin="289,51,0,0" VerticalAlignment="Top" Width="250" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.328"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
            <Image x:Name="ChooseHero" HorizontalAlignment="Center" Height="201" VerticalAlignment="Center" Width="238" Source="/Вопросик.jpg" Stretch="Fill" StretchDirection="Both" MouseLeftButtonDown="ChooseHero_MouseLeftButtonDown"/>
        </Border>
        <Label Content="Выберите своего героя!" HorizontalAlignment="Left" Margin="303,12,0,0" VerticalAlignment="Top" Width="227" Cursor="Arrow" FontFamily="Comic Sans MS" FontSize="18" FontWeight="Bold" FontStyle="Normal" Background="{x:Null}"/>
        <TextBox x:Name="labelintelegence" HorizontalAlignment="Left" Margin="78,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="28" IsEnabled="False" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Comic Sans MS" FontSize="16"/>
        <Label Content="Сила" HorizontalAlignment="Left" Margin="116,33,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontSize="16" FontWeight="Bold"/>
        <Label Content="Ловкость" HorizontalAlignment="Left" Margin="100,93,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.521,0.533" FontFamily="Comic Sans MS"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16" FontWeight="Bold"/>
        <Label Content="Интеллект" HorizontalAlignment="Left" Margin="92,147,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.495,2.174" FontFamily="Comic Sans MS" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16" FontWeight="Bold"/>
        <Label Content="Телосложение" HorizontalAlignment="Left" Margin="78,199,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.521,0.533" FontFamily="Comic Sans MS" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="constitutionlabel" HorizontalAlignment="Left" Margin="78,227,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="28" IsEnabled="False" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16" FontFamily="Comic Sans MS"/>
        <TextBox x:Name="labeldexterity" HorizontalAlignment="Left" Margin="78,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="28" IsEnabled="False" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Comic Sans MS" FontSize="16"/>
        <TextBox x:Name="labelstrenght" HorizontalAlignment="Left" Margin="78,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="28" IsEnabled="False" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16" FontFamily="Comic Sans MS"/>
        <Button x:Name="bnt_clickm1" Content="-" HorizontalAlignment="Left" Margin="50,69,0,0" VerticalAlignment="Top" Width="21" Background="#FF20B4E2" Cursor="Hand" Click="bnt_clickm1_Click" Visibility="Visible" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="1,1,1,1">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="bnt_clickp1" Content="+" HorizontalAlignment="Left" Margin="203,69,0,0" VerticalAlignment="Top" Width="21" Background="#FF2FD737" Cursor="Hand" Click="bnt_clickp1_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="bnt_clickm2" Content="-" HorizontalAlignment="Left" Margin="50,123,0,0" VerticalAlignment="Top" Width="21" Background="#FF20B4E2" Cursor="Hand" Click="bnt_clickm2_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="bnt_clickm3" Content="-" HorizontalAlignment="Left" Margin="50,177,0,0" VerticalAlignment="Top" Width="21" Background="#FF20B4E2" Cursor="Hand" Click="bnt_clickm3_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="bnt_clickm4" Content="-" HorizontalAlignment="Left" Margin="50,231,0,0" VerticalAlignment="Top" Width="21" Background="#FF20B4E2" Cursor="Hand" Click="bnt_clickm4_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="bnt_clickp2" Content="+" HorizontalAlignment="Left" Margin="203,123,0,0" VerticalAlignment="Top" Width="21" Background="#FF2FD737" Cursor="Hand" Click="bnt_clickp2_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="bnt_clickp3" Content="+" HorizontalAlignment="Left" Margin="203,177,0,0" VerticalAlignment="Top" Width="21" Background="#FF2FD737" Cursor="Hand" Click="bnt_clickp3_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="bnt_clickp4" Content="+" HorizontalAlignment="Left" Margin="203,231,0,0" VerticalAlignment="Top" Width="21" Background="#FF2FD737" Cursor="Hand" Click="bnt_clickp4_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <TextBox x:Name="textpoint" HorizontalAlignment="Left" Margin="669,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="122" Height="78" IsEnabled="False" TextAlignment="Center" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="0"/>
        <Label Content="Количество дополнительных очков" HorizontalAlignment="Left" Margin="572,33,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontSize="16" Height="28" Width="294" FontWeight="Bold"/>
        <TextBox x:Name="lvltxt" HorizontalAlignment="Left" Margin="670,204,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="27" Text="0" TextAlignment="Center" FontSize="20" IsEnabled="False" TextChanged="lvltxt_TextChanged"/>
        <Label Content="Уровень вашего персонажа" HorizontalAlignment="Left" Margin="612,159,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontSize="16" Height="28" Width="236" FontWeight="Bold"/>
        <Button x:Name="btn_lvlup" Content="Повышение уровня" HorizontalAlignment="Left" Margin="646,0,0,0" VerticalAlignment="Center" Width="168" Background="#FF49C7F1" Cursor="Hand" Height="35" FontSize="16" FontFamily="Comic Sans MS" Click="btn_lvlup_Click"/>
        <ComboBox x:Name="Hero" HorizontalAlignment="Left" Margin="292,274,0,0" VerticalAlignment="Top" Width="250" SelectionChanged="ComboBox_SelectionChanged" FontFamily="Comic Sans MS" FontSize="16" Background="{x:Null}">
            <ComboBox.Effect>
                <DropShadowEffect/>
            </ComboBox.Effect>
            <ComboBoxItem Content="Воин"/>
            <ComboBoxItem Content="Изгой"/>
            <ComboBoxItem Content="Магический_чувак"/>
            <ComboBoxItem Content="Лучник"/>
        </ComboBox>
        <TextBox x:Name="Manatxt" HorizontalAlignment="Left" Margin="21,349,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" Height="113" IsEnabled="False" TextAlignment="Center" FontSize="24" FontFamily="Comic Sans MS" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextDecorations="{x:Null}"/>
        <TextBox x:Name="Healthtxt" HorizontalAlignment="Left" Margin="199,349,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" Height="113" IsEnabled="False" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Comic Sans MS" FontSize="24"/>
        <Label x:Name="labelmp" Content="Мана персонажа" HorizontalAlignment="Left" Margin="21,307,0,0" VerticalAlignment="Top" Cursor="Hand" FontFamily="Comic Sans MS" FontSize="16" Width="144"/>
        <Label x:Name="labelhp" Content="Здоровье персонажа" HorizontalAlignment="Left" Margin="187,307,0,0" VerticalAlignment="Top" Cursor="Hand" FontFamily="Comic Sans MS" FontSize="16"/>
        <TextBox x:Name="Wol_Speed" HorizontalAlignment="Left" Margin="564,433,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" Height="42" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="At_Speed" HorizontalAlignment="Left" Margin="564,339,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" Height="42" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="Mg_Def" HorizontalAlignment="Left" Margin="722,433,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" Height="42" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="Ph_Attack" HorizontalAlignment="Left" Margin="398,339,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" Height="42" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="Ph_Deh" HorizontalAlignment="Left" Margin="398,433,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" Height="42" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="Mg_Attack" HorizontalAlignment="Left" Margin="722,339,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" Height="42" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Физическая атака" HorizontalAlignment="Left" Margin="400,307,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontSize="16"/>
        <Label Content="Физическая защита" HorizontalAlignment="Left" Margin="392,401,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Comic Sans MS"/>
        <Label Content="Скорость Атаки" HorizontalAlignment="Left" Margin="572,307,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Comic Sans MS"/>
        <Label Content="Скорость бега" HorizontalAlignment="Left" Margin="578,401,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontSize="16"/>
        <Label Content="Магическая атака" HorizontalAlignment="Left" Margin="722,307,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Comic Sans MS"/>
        <Label Content="Магическая защита" HorizontalAlignment="Left" Margin="722,396,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Comic Sans MS"/>
        <Image HorizontalAlignment="Left" Height="38" Margin="502,342,0,0" VerticalAlignment="Top" Width="36" Stretch="Uniform" Source="/Меч_Алмаз.png"/>
        <Image HorizontalAlignment="Left" Height="34" Margin="504,437,0,0" VerticalAlignment="Top" Width="34" Source="/Щит_Физика.png"/>
        <Image HorizontalAlignment="Left" Height="35" Margin="669,342,0,0" VerticalAlignment="Top" Width="36" Source="/Атак_Спид.jfif"/>
        <Image HorizontalAlignment="Left" Height="28" Margin="655,440,0,0" VerticalAlignment="Top" Width="50" Source="/Скорость_бега.jfif"/>
        <Image HorizontalAlignment="Left" Height="33" Margin="824,343,0,0" VerticalAlignment="Top" Width="39" Source="/Магическая_Атака.jfif"/>
        <Image HorizontalAlignment="Left" Height="35" Margin="829,437,0,0" VerticalAlignment="Top" Width="34" Source="/Магичекая_защита.jpg"/>
        <TextBox x:Name="makslvl" HorizontalAlignment="Left" Margin="969,178,0,0" TextWrapping="Wrap" Text="2000" VerticalAlignment="Top" Width="61" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextChanged="makslvl_TextChanged"/>
        <TextBox x:Name="_0lvl" HorizontalAlignment="Left" Margin="879,178,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="61" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextChanged="_0lvl_TextChanged"/>
        <Button x:Name="btn_click1000" Content="+1000" HorizontalAlignment="Left" Margin="891,133,0,0" VerticalAlignment="Top" Background="#FF44D411" Click="btn_click1000_Click"/>
        <Button x:Name="btn_click2000" Content="+2000" HorizontalAlignment="Left" Margin="969,133,0,0" VerticalAlignment="Top" Background="#FF52D623" Click="btn_click2000_Click"/>
        <Label Content="Повышение уровня" HorizontalAlignment="Left" Margin="873,95,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Label Content="ИЗ" HorizontalAlignment="Left" Margin="941,174,0,0" VerticalAlignment="Top" FontWeight="Bold"/>


    </Grid>
</Window>
