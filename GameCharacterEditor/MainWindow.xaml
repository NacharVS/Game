        <TextBox x:Name="_0lvl" HorizontalAlignment="Left" Margin="1011,218,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="75" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextChanged="_0lvl_TextChanged" Height="51" FontSize="20"/>
        <Button x:Name="btn_click1000" Content="+1000" HorizontalAlignment="Left" Margin="958,91,0,0" VerticalAlignment="Top" Background="#FF09D8E8" Click="btn_click1000_Click" Height="108" Width="126" RenderTransformOrigin="0.5,0.5" FontSize="18">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.018"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="btn_click2000" Content="+2000" HorizontalAlignment="Left" Margin="1146,90,0,0" VerticalAlignment="Top" Background="#FF0FE5ED" Click="btn_click2000_Click" Height="110" Width="124" FontSize="18"/>
        <Label Content="Повышение уровня" HorizontalAlignment="Left" Margin="936,18,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Height="66" Width="357" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.039"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="ИЗ" HorizontalAlignment="Left" Margin="1101,228,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="30" Width="32" RenderTransformOrigin="0.515,0.463" FontSize="16"/>
        <Button x:Name="btn_bd" Content="Добавление в базу данных" HorizontalAlignment="Left" Margin="606,396,0,0" VerticalAlignment="Top" Click="btn_bd_Click" FontSize="16" FontFamily="Comic Sans MS" FontWeight="Bold" Background="#FF25EE31" Height="49" Width="286"/>
        <ComboBox x:Name="cmb_boxraritem" HorizontalAlignment="Left" Margin="782,63,0,0" VerticalAlignment="Top" Width="149" Height="56">
            <ComboBoxItem Content="Меч двуручный"/>
            <ComboBoxItem Content="Нож одноручный"/>
            <ComboBoxItem Content="Топор одноручный"/>
            <ComboBoxItem Content="Лук двуручный"/>
            <ComboBoxItem Content="Магическая палка"/>
            <ComboBoxItem Content="Меч одноручный"/>
        </ComboBox>
        <Button x:Name="btn_add" Content="Добавить" HorizontalAlignment="Left" Margin="818,140,0,0" VerticalAlignment="Top" Height="46" Width="78" FontSize="14" Click="btn_add_Click"/>
        <ListView x:Name="lstView" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="583,53,651,561">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="PrevBtn" Content="Button" HorizontalAlignment="Left" Height="62" Margin="606,263,0,0" VerticalAlignment="Top" Width="72" Click="PrevBtn_Click"/>
        <Button x:Name="NextBtn" Content="Button" HorizontalAlignment="Left" Height="57" Margin="719,263,0,0" VerticalAlignment="Top" Width="74" Click="NextBtn_Click"/>
    </Grid>
</Window>
