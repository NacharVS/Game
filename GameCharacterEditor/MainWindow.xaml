        <Label x:Name="labelhp" Content="Здоровье персонажа" HorizontalAlignment="Left" Margin="265,339,0,0" VerticalAlignment="Top" Cursor="Hand" FontFamily="Comic Sans MS" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="Wol_Speed" HorizontalAlignment="Left" Margin="677,591,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" Height="42" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="At_Speed" HorizontalAlignment="Left" Margin="677,497,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" Height="42" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="Mg_Def" HorizontalAlignment="Left" Margin="835,591,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" Height="42" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
