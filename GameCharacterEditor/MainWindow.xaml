                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="bnt_clickm2" Content="-" HorizontalAlignment="Left" Margin="22,118,0,0" VerticalAlignment="Top" Width="38" Background="#FF20B4E2" Cursor="Hand" Click="bnt_clickm2_Click" Height="36">
