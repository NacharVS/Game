<Window x:Class="GameCharacterEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameCharacterEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid x:Name="Fon" Margin="0,4,0,-6">
        <Button x:Name="Create_character" Content="Создать персонажа" HorizontalAlignment="Left" Margin="538,310,0,0" VerticalAlignment="Top" Width="132" Height="22" Click="Create_character_Click"/>
        <Label x:Name="Choose_class" Content="Выберите класс персонажа" HorizontalAlignment="Left" Margin="90,35,0,0" VerticalAlignment="Top"/>
        <Image x:Name="image_character" HorizontalAlignment="Left" Height="250" Margin="470,35,0,0" VerticalAlignment="Top" Width="260"/>
        <Label x:Name="name_character" Content="Введите имя персонажа" HorizontalAlignment="Left" Margin="100,130,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textb_name_character" HorizontalAlignment="Left" Height="23" Margin="75,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197"/>
        <Label x:Name="character_characteristics" Content="Характеристики персонажа" HorizontalAlignment="Left" Margin="90,232,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textb_hp" HorizontalAlignment="Left" Height="23" Margin="45,474,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textb_attack_magic" HorizontalAlignment="Left" Height="23" Margin="250,531,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textb_attack" HorizontalAlignment="Left" Height="23" Margin="45,531,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textb_mana" HorizontalAlignment="Left" Height="23" Margin="250,474,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <RadioButton x:Name="radBtn_Warrior" Content="Воин" HorizontalAlignment="Left" Margin="62,84,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radBtn_Witch" Content="Волшебник" HorizontalAlignment="Left" Margin="130,84,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radBtn_Rogue" Content="Разбойник" HorizontalAlignment="Left" Margin="230,84,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textb_attack_speed" HorizontalAlignment="Left" Height="23" Margin="250,414,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textb_walk_speed" HorizontalAlignment="Left" Height="23" Margin="45,414,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="HP" Content="HP" HorizontalAlignment="Left" Margin="45,443,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Mana" Content="Мана" HorizontalAlignment="Left" Margin="250,443,0,0" VerticalAlignment="Top"/>
        <Label x:Name="attack_Speed" Content="Скорость атаки" HorizontalAlignment="Left" Margin="250,389,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Attack_magic" Content="маг. Атака" HorizontalAlignment="Left" Margin="250,505,0,0" VerticalAlignment="Top"/>
        <Label x:Name="walk_Speed" Content="Скорость ходьбы" HorizontalAlignment="Left" Margin="45,389,0,0" VerticalAlignment="Top"/>
        <Label x:Name="p__Attack" Content="физ. Атака" HorizontalAlignment="Left" Margin="45,505,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textb_mResist" HorizontalAlignment="Left" Margin="250,585,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textb_pResist" HorizontalAlignment="Left" Margin="45,585,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textb_constitution" HorizontalAlignment="Left" Margin="250,362,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textb_dexterity" HorizontalAlignment="Left" Margin="250,300,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textb_intelligent" HorizontalAlignment="Left" Margin="45,362,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textb_strenght" HorizontalAlignment="Left" Margin="45,300,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="Strenght" Content="Сила" HorizontalAlignment="Left" Margin="45,274,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Constitution" Content="Телосложение" HorizontalAlignment="Left" Margin="250,0,0,0" VerticalAlignment="Center"/>
        <Label x:Name="m_Resist" Content="маг. Сопротивление" HorizontalAlignment="Left" Margin="250,555,0,0" VerticalAlignment="Top"/>
        <Label x:Name="p__Resist" Content="физ. Сопростивление" HorizontalAlignment="Left" Margin="45,555,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Intelligently" Content="Интелект" HorizontalAlignment="Left" Margin="45,0,0,0" VerticalAlignment="Center"/>
        <Label x:Name="Dexterity" Content="Ловкость" HorizontalAlignment="Left" Margin="250,274,0,0" VerticalAlignment="Top"/>
        <Button Content="+" HorizontalAlignment="Left" Margin="170,300,0,0" VerticalAlignment="Top" Width="20"/>
        <Button Content="+" HorizontalAlignment="Left" Margin="375,362,0,0" VerticalAlignment="Top" Width="20"/>
        <Button Content="+" HorizontalAlignment="Left" Margin="375,298,0,0" VerticalAlignment="Top" Width="20"/>
        <Button Content="+" HorizontalAlignment="Left" Margin="170,360,0,0" VerticalAlignment="Top" Width="20"/>
        <Button Content="-" HorizontalAlignment="Left" Margin="20,298,0,0" VerticalAlignment="Top" Width="20"/>
        <Button Content="-" HorizontalAlignment="Left" Margin="223,360,0,0" VerticalAlignment="Top" Width="20"/>
        <Button Content="-" HorizontalAlignment="Left" Margin="223,300,0,0" VerticalAlignment="Top" Width="20"/>
        <Button Content="-" HorizontalAlignment="Left" Margin="20,362,0,0" VerticalAlignment="Top" Width="20"/>
    </Grid>
</Window>
